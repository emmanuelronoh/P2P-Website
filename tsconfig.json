{
  "compilerOptions": {
    "jsx": "react-jsx",    
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "noEmit": true
  },
  "include": ["src"],  
  "exclude": [
    "dist",          
    "node_modules",  
    "**/*.config.js" 
  ]
}
